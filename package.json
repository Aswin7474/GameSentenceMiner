{
  "name": "gamesentenceminer",
  "version": "2.4.0",
  "description": "GameSentenceMiner",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc",
    "dev": "tsc --watch",
    "app:dir": "electron-builder --dir",
    "app:dist": "tsc && electron-builder"
  },
  "tsc": {

  },
  "build": {
    "asar": true,
    "appId": "com.bpwhelan.gsm",
    "files": [
      "dist/main/**/*",
      "electron-src/main/index.html",
      "icon.png"
    ],
    "extraFiles": [
      {
      "from": "electron-src/main/index.html",
      "to": "resources/app/dist/main/index.html"
      },
      {
        "from": "icon.png",
        "to": "resources/app/dist/main/icon.png"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "bpwhelan",
        "repo": "GameSentenceMiner",
        "releaseType": "release"
      }
    ]
  },
  "author": "Beangate",
  "license": "LGPL-3.0-only",
  "devDependencies": {
    "electron": "23.1.3",
    "electron-builder": "^25.1.8",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@xterm/xterm": "^5.5.0",
    "decompress": "^4.2.1",
    "nodejs-file-downloader": "^4.13.0",
    "tar": "^7.4.3",
    "xterm-addon-fit": "^0.8.0"
  }
}
