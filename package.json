{
  "name": "gamesentenceminer",
  "version": "1.0.1",
  "description": "GameSentenceMiner",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc",
    "dev": "tsc --watch",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "app:publish": "electron-builder --publish always"
  },
  "tsc": {},
  "build": {
    "asar": false,
    "appId": "com.bpwhelan.gsm",
    "files": [
      "dist/main/**/*",
      "icon.png",
      "texthooker/docs/index.html"
    ],
    "extraFiles": {
      "from": "texthooker/docs/index.html",
      "to": "index.html"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "bpwhelan",
        "repo": "GameSentenceMiner",
        "releaseType": "release"
      }
    ]
  },
  "author": "Beangate",
  "license": "LGPL-3.0-only",
  "devDependencies": {
    "electron": "23.1.3",
    "electron-builder": "^25.1.8",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "decompress": "^4.2.1",
    "electron-chrome-extensions": "^4.6.0",
    "nodejs-file-downloader": "^4.13.0",
    "tar": "^7.4.3"
  }
}
