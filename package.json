{
  "name": "gamesentenceminer",
  "productName": "GameSentenceMiner",
  "version": "1.2.1",
  "description": "GameSentenceMiner",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc",
    "dev": "tsc --watch",
    "app:dir": "electron-builder --dir",
    "app:dist": "tsc && electron-builder"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "tsc": {},
  "build": {
    "asar": false,
    "appId": "com.bpwhelan.gsm",
    "files": [
      "dist/main/**/*",
      "electron-src/main/index.html",
      "icon.png"
    ],
    "extraFiles": [
      {
        "from": "electron-src/assets",
        "to": "resources/assets"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png",
      "sign": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "bpwhelan",
        "repo": "GameSentenceMiner",
        "releaseType": "release"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bpwhelan/GameSentenceMiner.git"
  },
  "author": "Beangate",
  "license": "LGPL-3.0-only",
  "devDependencies": {
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@xterm/xterm": "^5.5.0",
    "axios": "^1.8.1",
    "decompress": "^4.2.1",
    "electron-log": "^5.3.2",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.3.9",
    "nodejs-file-downloader": "^4.13.0",
    "python-shell": "^5.0.0",
    "tar": "^7.4.3",
    "xterm-addon-fit": "^0.8.0"
  }
}
